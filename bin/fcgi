#!/bin/bash

# Replace these three settings.
PROJDIR="/var/www/commoner.cc/commoner"
FCGIHOST="localhost"
FCGIPORT="7999"
PIDFILE="$PROJDIR/commoner.pid"

cd $PROJDIR
if [ -f $PIDFILE ]; then
    kill `cat -- $PIDFILE`
    rm -f -- $PIDFILE
fi

exec /usr/bin/env - \
  ./bin/django runfcgi method=prefork host=$FCGIHOST port=$FCGIPORT pidfile=$PIDFILE


